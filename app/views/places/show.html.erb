<div class="module">
  <div class="check">
    <%= button_to "✓", [:ok, @place], method: :patch, class: "ok" %>
    <%= button_to "✗", [:not, @place], method: :patch, class: "not" %>
  </div>
  <ul class="counter">
    <li><%= data_tag progress_as_percentage %></li>
    <li>Chequeadas <%= link_to number_with_delimiter(counter.checks), checked_places_url, class: "data" %> de <%= link_to number_with_delimiter(counter.places), places_path, class: "data" %> mesas</li>
    <li>En total <%= data_tag number_with_delimiter(counter.ok_checks) %> buenos y <%= data_tag number_with_delimiter(counter.not_checks) %> malos</li>
  </ul>
</div>
<div class="place_wrapper">
  <iframe src="<%= @place.url %>" frameborder="0" class="place"></iframe>
  <% if @place.checked? %>
    <h3 class="message">Chequeos anteriores</h3>
  <% end %>
</div>
